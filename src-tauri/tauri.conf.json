{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "Supa Bass-a-matic",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["app"],
      "identifier": "com.supa-bass-a-matic.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "supa-bass-a-matic",
        "width": 800,
        "height": 600
      }
    ],
    "cli": {
      "description": "supa-bass-a-matic PostgreSQL Query Tool",
      "args": []
    }
  }
}
